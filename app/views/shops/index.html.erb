<% if notice %>
  <p id="notice"><%= notice %></p>
<% end %>
<div id="map"></div>

<%= render 'tab' %>

<script type="text/javascript">
  // 現在地が取得できなければ、奥州市役所
  var currentLocation = [39.144562, 141.139285]

  // navigatorのオプション
  var options = {
    enableHighAccuracy: true,
    timeout: 5000,
    maximumAge: 0
  };

  if (navigator.geolocation) {
    navigator.geolocation.getCurrentPosition(success, error, options)
  } else {
    currentLocation = [39.144562, 141.139285]
  }

  // マップの中心部を決める
  var map = L.map('map').setView(currentLocation, 17);
  // アイコンのディレクトリ
  L.Icon.Default.imagePath = "/assets/";
  // タイルの取得
  var osmUrl = "http://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png";
  // コピーライト
  var osmAttrib = "Map data OpenstreetMap contributors";

  // レイヤーの指定
  L.tileLayer(osmUrl,{
    attribution: osmAttrib,
    maxZoom: 20,
  }).addTo(map);

  // 現在地にピン立て
  L.marker(currentLocation).addTo(map)

  // お店一覧をプロット
  <% @newer.each do |shop| %>
    L.marker([<%= shop["latitude"] %>, <%= shop["longitude"] %>]).addTo(map)
  <% end %>

  // 現在地取得できた場合の処理
  function success(pos) {
    var crd = pos.coords;
    currentLocation[0] = crd.latitude
    currentLocation[1] = crd.longitude
  }

  // 現在地取得ができなかった場合の処理
  function error(err) {
    currentLocation = [39.144562, 141.139285]
    console.alert("現在地は取得できません。");
  }
</script>

